<div class="containee-fluid mt-5 contact-style" id="contactid">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <h1 class="text-center main-heading">Contact Us</h1>
            <p class="text-center sub-heading">We will be happy to help you</p>

            <div class="row">
                <div class="col-md-6 col-12 mx-auto">

                    <form action="/contact" method="POST">
                    <div class="form-group">
                        <label for="exapmleInputPassword1">Name</label>
                        <input type="text" class="form-control" id="exapmleInputPassword1" placeholder="Full Name" name="name">
                    </div>
                    <div class="form-group">
                        <label for="exapmleInputEmail1">Email Address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Your email" name="email">
                        <small id="emailHelp" class="form-text text-muted">Your detail are Secured</small>
                    </div>
                    <div class="form-group">
                        <label for="exapmleInputPassword1">Phone</label>
                        <input type="text" class="form-control" id="exapmleInputPassword1" placeholder="Phone Number" name="phone">
                    </div>
                    <div class="form-group">
                        <label for="exapmleInputPassword">Message</label>
                        <input type="text" class="form-control" id="exapmleInputPassword1" placeholder="Message" name="message">
                    </div>
                    <br>
                    <button type="submit" class="btn-style btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>